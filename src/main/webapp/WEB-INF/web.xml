<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
                             http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>MammasMonitor</display-name>

    <!-- Servlets -->
    <servlet>
        <servlet-name>Patientloginservlet</servlet-name>
        <servlet-class>Patientloginservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Patientloginservlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DoctorLoginServlet</servlet-name>
        <servlet-class>DoctorLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorLoginServlet</servlet-name>
        <url-pattern>/doctorlogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetMedicineScheduleServlet</servlet-name>
        <servlet-class>GetMedicineScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetMedicineScheduleServlet</servlet-name>
        <url-pattern>/getMedicineSchedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetYogaPlanServlet</servlet-name>
        <servlet-class>GetYogaPlanServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetYogaPlanServlet</servlet-name>
        <url-pattern>/getYogaPlan</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewPatientsServlet</servlet-name>
        <servlet-class>ViewPatientsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewPatientsServlet</servlet-name>
        <url-pattern>/viewPatients</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AppointmentServlet</servlet-name>
        <servlet-class>AppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppointmentServlet</servlet-name>
        <url-pattern>/appointments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MedCheckServlet</servlet-name>
        <servlet-class>MedCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedCheckServlet</servlet-name>
        <url-pattern>/medcheck</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>html/welcome.html</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
    </welcome-file-list>

</web-app>
